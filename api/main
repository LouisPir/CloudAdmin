from fastapi import FastAPI
from .routers import shows

API = FastAPI(
    title="Netflix Catalog API",
    version="1.0.0",
    description="API for querying Netflix catalog data.",
    docs_url="/docs",
    redoc_url="/redoc"
)

API.include_router(shows.router, prefix="/netflix", tags=["Netflix Catalog"])

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(API, host="127.0.0.1", port=8000)
